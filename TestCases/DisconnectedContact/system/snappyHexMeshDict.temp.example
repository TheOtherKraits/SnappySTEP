FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh on;

snap            on;

addLayers       off;

geometry
{
    DisconnectedContact
    {
        type triSurfaceMesh;
        file "DisconnectedContact.stl";
        regions
        {
            Coldplate_wall { name coldplateWall; }
            PCB_wall { name boardWall; }
        }
    }

    Coldplate_to_PCB
    {
        type triSurfaceMesh;
        file "Coldplate_to_PCB.stl";
		regions
		{
			Coldplate_to_PCB_1 { name Contact1; }
			Coldplate_to_PCB_2 { name Contact2; }
		}
    }
}

castellatedMeshControls
{
    features
    (
    );

    refinementSurfaces
    {
        DisconnectedContact
        {
            level (2 2);
            patchInfo
            {
                type wall;
                inGroups (externalWall);
            }

        }

        Coldplate_to_PCB
        {
            level (2 2);
            faceZone Interface;
            cellZone PCB;
            mode        insidePoint;
            insidePoint (0.05 .025 .022);
        }
    }

    // delete "-disabled" below to enable refinementRegions
    refinementRegions-disabled
    {
        <surface>
        {
            mode    inside;
            level   2;
        }
    }

    insidePoint (0.05 0.025 .005);
    nCellsBetweenLevels 3;
}

snapControls
{
    explicitFeatureSnap    off;
    implicitFeatureSnap    on;
}

addLayersControls
{
    layers
    {
        "DisconnectedContact.*" { nSurfaceLayers 0; }
        "Coldplate_to_PCB.*" { nSurfaceLayers 0; }
    }

    relativeSizes       on; // off, usually with firstLayerThickness
    expansionRatio      1.2;
    finalLayerThickness 0.5;
    minThickness        0.001;
    firstLayerThickness-disabled 0;
    maxThicknessToMedialRatio-disabled 0.3;
}

// delete "-disabled" to output mesh data, e.g. for layers
writeFlags-disabled
(
    scalarLevels
    layerSets
    layerFields
);

mergeTolerance 1e-6;

// ************************************************************************* //
